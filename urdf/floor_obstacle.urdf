<?xml version="1.0"?>
<robot name="floor_description">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <!--  ######################################################## -->
  <!--  ######################################################## -->
  <!--  ######################################################## -->

  <!--  ######################################################## -->
  <link name="floor">
    <visual>
      <geometry>
        <box size="4.0 6.0 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.0 0.0 -0.1"/>
    <material name="wall_colored">
      <color rgba="1.000000 0.188235 0.003922 1.000000"/>
    </material>
    </visual>
    <collision>
      <geometry>
        <box size="4.0 6.0 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.0 0.0 -0.1"/>
    </collision>
  </link>

  <joint name="base_to_floor" type="fixed">
    <parent link="base_link"/>
    <child link="floor"/>
  </joint>

  <link name="obstacle">
    <visual>
      <geometry>
        <box size="1.5 1.0 2.0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="1.0 0.0 -0.05"/>
    <material name="wall_colored">
      <color rgba="1.000000 0.388235 0.003922 1.000000"/>
    </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.5 1.0 2.0"/>
      </geometry>
      <origin rpy="0 0 0" xyz="1.0 0.0 -0.05"/>
    </collision>
  </link>

  <joint name="obstacle_to_floor" type="fixed">
    <parent link="base_link"/>
    <child link="obstacle"/>
  </joint>

</robot>
